<body class ="receipt-page">
@using ConcessionStandProject
@model Order;
@{
    ViewData["Title"] = "Point Of Sale";
}

<div class="text-center">
    <h1 class="receiptpageheader">Receipt</h1>
</div>
<div id="invoice-POS">
    <div id="top">
      <div class="logo"></div>
      <div class="info">
      <h2 class="receiptheader">Brittany's Totally Original <br />Concession Stand</h2>
      </div>
    </div>

     <div id="mid">
       <div class="receiptcontactinfo">
         <p>
           134340 Bangtan Sonyeondan Ave <br />
           concessionstandhelp@gmail.com <br />
           555-123-4567<br />
         </p>
         <p class="receiptorderid"> OrderID:<br />@Model.Receipt.OrderId</p>
       </div>
     </div>

     <div id="bot">
       <div id="table">
         <table>
            <tr class="receiptcontainer">
              <td class="itemheader"><p>Item</p></td>
              <td class="priceheader"> <p>Price</p></td>
            </tr>
            @foreach (var product in @Model.Products)
            {
             <tr class="itemlistcontainer">
               <td><p class="itemlist">@product.Name </p></td> 
               <td><p class="itemlist">$@string.Format("{0:#.00}",product.Price)</p></td>               
             </tr>
            }

            <tr class="receiptcontainer">
              <td></td>
              <td class="receipttotal"><br /><p>Total = $@string.Format("{0:#.00}", Model.Total)</p></td>
            </tr>
         </table>
       </div>
       <div id="message">
            <p>Thank you for your business!</p>
	   </div>
     </div>
</div>

</body>