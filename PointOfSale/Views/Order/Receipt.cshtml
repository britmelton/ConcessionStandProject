 

@using ConcessionStandProject
@model Order;
@{
    ViewData["Title"] = "Point Of Sale";
}

<div class="text-center">
    <h1 class="receipt">Receipt</h1>
  

</div>

    <div id="invoice-POS">
        <center id="top">
            <div class="logo"></div>
            <div class="info">
                <h2>Brittany's Totally Original Concession Stand</h2>
            </div>
        </center>


        <div id="mid">
            <div class="info">
                <p>
                    134340 Fun Street, Lala, Pluto
                    concessionstandhelp@gmail.com
                    555-123-4567
                </p>
               <p class="orderid"> OrderID:@Model.Receipt.OrderId</p>
            </div>
        </div>

        <div id="bot">
            <div id="table">
                <table>
                    <tr class="tabletitle">
                        <td class="item"><h2>Item</h2></td>
                        <td class="price"> <h2>Price</h2></td>
                    </tr>
                     @foreach (var product in @Model.Products)
                     {
                    <tr class="service">
                       
                        
                        <td class="tableitem">                         
                         <p class="itemtext">@product.Name </p></td> 
                         <td class="tableitem">
                             <p class="itemtext">$@string.Format("{0:#.00}",product.Price)</p>
                         </td>           
                        
                    </tr>
                    }

                    <tr class="tabletitle">
                        <td></td>
                        <td class="total"><br /><h2>Total = $@string.Format("{0:#.00}", Model.Total)</h2></td>
                    </tr>
                </table>
            </div>
            			<div id="legalcopy">
						<p class="legal"><strong>Thank you for your business!</strong>
						</p>
					</div>
        </div>
    </div>